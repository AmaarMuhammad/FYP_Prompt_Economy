# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/prompt-economy
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/prompt-economy

# JWT Secret (Generate a secure random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Blockchain Configuration
BLOCKCHAIN_NETWORK=sepolia
# Options: mainnet, sepolia, polygon, polygon-mumbai

# Ethereum RPC URLs
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Contract Addresses (Will be filled after deployment)
USER_REGISTRY_CONTRACT=
MARKETPLACE_CONTRACT=

# API Keys
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
